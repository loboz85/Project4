<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/cover"
        android:layout_height="@dimen/cover"
        android:layout_margin="@dimen/margin_list"
        android:gravity="center"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/image_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/composer_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/composer_size"
            android:textColor="@color/composer"
            android:textStyle="bold"
            android:layout_margin="@dimen/margin_list" />

        <TextView
            android:id="@+id/movie_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/movie_size"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_list"
            android:layout_marginBottom="@dimen/margin_list" />

        <TextView
            android:id="@+id/song_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/song_size"
            android:layout_marginLeft="@dimen/margin_list"
            android:layout_marginBottom="@dimen/margin_list" />

    </LinearLayout>

    <ImageView
        android:id="@+id/play_arrow"
        android:layout_width="@dimen/play"
        android:layout_height="@dimen/play"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/play_margin"
        android:src="@drawable/play2" />


</RelativeLayout>